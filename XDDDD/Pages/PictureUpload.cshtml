@page
@model XDDDD.Pages.PictureUploadModel

@{
    ViewData["Title"] = "PictureUpload";
}

<h1>PictureUpload</h1>

<h4>Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Picture.PictureName" class="control-label"></label>
                <input asp-for="Picture.PictureName" class="form-control" />
                <span asp-validation-for="Picture.PictureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture.Order" class="control-label"></label>
                <input asp-for="Picture.Order" class="form-control" />
                <span asp-validation-for="Picture.Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture.LocatedAlbumId" class="control-label"></label>
                <select asp-for="Picture.LocatedAlbumId" asp-items="Model.AlbumsList" class="form-control" ></select>
                <span asp-validation-for="Picture.LocatedAlbumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
